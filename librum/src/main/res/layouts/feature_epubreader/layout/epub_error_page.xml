<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/errorRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_epub_error_bg"
        android:orientation="vertical">

    <TextView
            android:id="@+id/errorViewTitle"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:gravity="center"
            android:text="@string/epub_error_title"
            android:textColor="#2a2a2a"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/errorViewImage"
            app:layout_constraintVertical_bias="0.5"/>

    <TextView
            android:id="@+id/errorViewMessage"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/epub_error_message_404"
            android:textColor="@color/black_effective"
            app:layout_constraintBottom_toTopOf="@+id/errorViewImage"
            app:layout_constraintTop_toBottomOf="@+id/errorViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1"/>

    <ImageView
            android:id="@+id/errorViewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_error_404_car"
            android:contentDescription="@null"
            android:scaleType="fitEnd"
            app:layout_constraintTop_toBottomOf="@+id/errorViewMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/errorMsgPleaseRetryTxt"/>

    <TextView
            android:id="@+id/errorMsgPleaseRetryTxt"
            style="@style/TextStyle.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/epub_load_error_retry"
            android:textColor="@color/black_effective"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/errorViewBtnRetry"
            app:layout_constraintEnd_toEndOf="@+id/errorViewBtnRetry"
            app:layout_constraintStart_toStartOf="@+id/errorViewBtnRetry"/>

    <Button
            android:id="@+id/errorViewBtnRetry"
            style="@style/Button.Primary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/epub_load_error_retry"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="80dp"
            />

</android.support.constraint.ConstraintLayout>
