<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/white_nav_bg_header"
        android:layout_height="160dp">

    <ImageView
            android:id="@+id/epubBookCover"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/dark_epub_drawer_bg"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/epubBookCover"
            app:layout_constraintHorizontal_bias="0.01"
            android:gravity="center">

        <!--book title-->
        <TextView
                android:id="@+id/epubBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/ebook_title"
                android:textColor="@color/black_effective"
                android:textSize="18sp"/>

        <!--book author-->
        <TextView
                android:id="@+id/epubBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/ebook_author"
                android:textColor="@color/gray_light"
                android:textSize="15sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>